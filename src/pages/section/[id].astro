---
import Layout from "../../layouts/Layout.astro";

import { playlists, songs } from "../../lib/data";
import Navigation from "../../components/Navigation";
import PlayListItemCard from "../../components/PlayListItemCard.astro";
import GridPlaylists from "@/components/GridPlaylists";

const { id } = Astro.params;

const sectionTitle = "Hecho para adriandfl99";
---

<Layout title="Spotify Clone.">
  <div
    id="playlist-container"
    class="relative flex flex-col h-full bg-zinc-900 overflow-x-hidden"
    transition:name=`section ${id} box`
  >
    <!-- Page Header -->

    <main class="px-6 pt-4 relative">
      <div class="flex justify-between">
        <h2 class="text-2xl font-bold text-white">{sectionTitle}</h2>
      </div>

      <GridPlaylists columns={5} client:visible>
        {playlists.map((playlist) => <PlayListItemCard playlist={playlist} />)}
      </GridPlaylists>
    </main>
  </div>
</Layout>
